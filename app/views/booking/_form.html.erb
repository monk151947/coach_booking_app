<%= form_with url: booking_create_path, local: true do |form| %>
    <%= form.hidden_field :time_slots_id, id: 'slot-id' %>
    <div class="form-group">
      <label for="coach-name">Coach:</label>
      <%= form.text_field :coach_name, id: 'coach-name', class: 'form-control', disabled: true %>
    </div>
    <div class="form-group">
      <label for="slot-time">Appointment</label>
      <%#= form.text_field :booking, id: 'booking', class: 'form-control', disabled: true %>
    </div>
    <div class="form-group">
      <%= form.submit 'Book Appointment', class: "btn btn-md btn-primary btn-block" %>
    </div>
  <% end %>